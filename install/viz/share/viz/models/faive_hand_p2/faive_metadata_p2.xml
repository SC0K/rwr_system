<mujoco>
    <compiler angle="radian"/>
    <default>
        <!-- use same geom params as the Shadow Hand model in IsaacGymEnv for now -->
        <geom rgba="1 1 1 1" type="mesh" friction="1 0.005 0.001" condim="3" margin="0.0005" contype="1" conaffinity="1"/>
        <!-- use same joint params as IsaacGymEnv for now -->
        <joint type="hinge" limited="true" damping="0.1" armature="0.001" margin="0.01" frictionloss="0.001"/>
        <!-- actuator configuration -->
        <position ctrllimited="true" forcelimited="true" forcerange="-1 1" kp="2."/>
        <!-- the tendon which limits the two joints creating the rolling joint should be very limited in its length range -->
        <tendon limited="true" range="-0.001 0.001"/>
    </default>
    <asset>
        <!-- IsaacGym somehow does not respect the default mesh scale so set each of them manually here... -->
        <mesh name="palm" file="mesh_p2/palm.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="base" file="mesh_p2/base.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="index_lm" file="mesh_p2/index_lm.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="middle_lm" file="mesh_p2/middle_lm.stl" scale = "0.001 0.001 0.001" />
        <mesh name="ring_lm" file="mesh_p2/index_lm.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="pinky_lm" file="mesh_p2/pinky_lm.stl" scale = "0.001 0.001 0.001"/>

        <mesh name="thumb_lt" file="mesh_p2/thumb_lt.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="thumb_ut" file="mesh_p2/thumb_ut.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="thumb_m" file="mesh_p2/thumb_m.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="thumb_pp" file="mesh_p2/thumb_pp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="thumb_dp" file="mesh_p2/thumb_dp.stl" scale = "0.001 0.001 0.001"/>

        <mesh name="index_um" file="mesh_p2/index_um.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="index_pp" file="mesh_p2/index_pp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="index_mp" file="mesh_p2/index_mp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="index_dp" file="mesh_p2/index_dp.stl" scale = "0.001 0.001 0.001"/>

        <mesh name="middle_um" file="mesh_p2/middle_um.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="middle_pp" file="mesh_p2/middle_pp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="middle_mp" file="mesh_p2/middle_mp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="middle_dp" file="mesh_p2/middle_dp.stl" scale = "0.001 0.001 0.001"/>

        <mesh name="ring_um" file="mesh_p2/index_um.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="ring_pp" file="mesh_p2/index_pp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="ring_mp" file="mesh_p2/index_mp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="ring_dp" file="mesh_p2/index_dp.stl" scale = "0.001 0.001 0.001"/>

        <mesh name="pinky_um" file="mesh_p2/pinky_um.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="pinky_pp" file="mesh_p2/pinky_pp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="pinky_mp" file="mesh_p2/pinky_mp.stl" scale = "0.001 0.001 0.001"/>
        <mesh name="pinky_dp" file="mesh_p2/pinky_dp.stl" scale = "0.001 0.001 0.001"/>
    </asset>
    <contact>
        <!-- neighboring bodies are excluded from contact calculation -->
        <exclude body1="palm" body2="thumb_ut"/>
        <exclude body1="thumb_ut" body2="thumb_m"/>  <!-- there seems to be somehow unintended collision here -->
        <exclude body1="thumb_m" body2="thumb_pp"/>
        <exclude body1="thumb_pp" body2="thumb_dp"/>
        
        <exclude body1="palm" body2="index_um"/>
        <exclude body1="index_um" body2="index_pp"/>
        <exclude body1="index_pp" body2="index_mp"/>
        <exclude body1="index_mp" body2="index_dp"/>
        
        <exclude body1="palm" body2="middle_um"/>
        <exclude body1="middle_um" body2="middle_pp"/>
        <exclude body1="middle_pp" body2="middle_mp"/>
        <exclude body1="middle_mp" body2="middle_dp"/>

        <exclude body1="palm" body2="ring_um"/>
        <exclude body1="ring_um" body2="ring_pp"/>
        <exclude body1="ring_pp" body2="ring_mp"/>
        <exclude body1="ring_mp" body2="ring_dp"/>
        
        <exclude body1="palm" body2="pinky_um"/>
        <exclude body1="pinky_um" body2="pinky_pp"/>
        <exclude body1="pinky_pp" body2="pinky_mp"/>
        <exclude body1="pinky_mp" body2="pinky_dp"/>
    </contact>

    <sensor>
        <jointpos name="thumb_flex" joint="thumb_flex"/>
        <jointpos name="thumb_abd" joint="thumb_abd"/>
        <jointpos name="thumb_m2pp" joint="thumb_m2pp"/>
        <jointpos name="thumb_pp2dp" joint="thumb_pp2dp"/>
        
        <jointpos name="index_abd" joint="index_abd"/>
        <jointpos name="root2index_pp" joint="root2index_pp"/>
        <jointpos name="index_pp2mp" joint="index_pp2mp"/>
        <jointpos name="index_mp2dp" joint="index_mp2dp"/>

        <jointpos name="middle_abd" joint="middle_abd"/>
        <jointpos name="root2middle_pp" joint="root2middle_pp"/>
        <jointpos name="middle_pp2mp" joint="middle_pp2mp"/>
        <jointpos name="middle_mp2dp" joint="middle_mp2dp"/>

        <jointpos name="ring_abd" joint="ring_abd"/>
        <jointpos name="root2ring_pp" joint="root2ring_pp"/>
        <jointpos name="ring_pp2mp" joint="ring_pp2mp"/>
        <jointpos name="ring_mp2dp" joint="ring_mp2dp"/>

        <jointpos name="pinky_abd" joint="pinky_abd"/>
        <jointpos name="root2pinky_pp" joint="root2pinky_pp"/>
        <jointpos name="pinky_pp2mp" joint="pinky_pp2mp"/>
        <jointpos name="pinky_mp2dp" joint="pinky_mp2dp"/>
    </sensor>
    
    <actuator>
        <!-- 
        The actuators for the distal joints are set to have a kp twice the default value (kp_def = 2), since they must move two joints.
        the control ranges are set to match the values in hand_defs.yaml (due to how we simulate rolling contact joints, their ranges are reduced to half)
        -->
        <position name="thumb_flex" joint="thumb_flex" ctrlrange="-0.131 0.846"/>
        <position name="thumb_abd" joint="thumb_abd" ctrlrange="-0.785 0.175"/>
        <position name="thumb_m2pp" joint="thumb_m2pp" ctrlrange="-0.331 0.960"/>
        <position name="thumb_pp2dp" joint="thumb_pp2dp" ctrlrange="-0.131 0.829"/>
        
        <position name="index_abd" joint="index_abd" ctrlrange="-0.264 0.264"/>
        <position name="root2index_pp" joint="root2index_pp" ctrlrange="-0.157 0.829"/>
        <position name="index_pp2mp" joint="index_pp2mp" ctrlrange="-0.131 0.960" kp="4"/>
        
        <position name="middle_abd" joint="middle_abd" ctrlrange="-0.264 0.264"/>
        <position name="root2middle_pp" joint="root2middle_pp" ctrlrange="-0.157 0.829"/>
        <position name="middle_pp2mp" joint="middle_pp2mp" ctrlrange="-0.131 0.960" kp="4"/>

        <position name="ring_abd" joint="ring_abd" ctrlrange="-0.264 0.264"/>
        <position name="root2ring_pp" joint="root2ring_pp" ctrlrange="-0.157 0.829" />
        <position name="ring_pp2mp" joint="ring_pp2mp" ctrlrange="-0.131 0.960" kp="4"/>

        <position name="pinky_abd" joint="pinky_abd" ctrlrange="-0.264 0.264"/>
        <position name="root2pinky_pp" joint="root2pinky_pp" ctrlrange="-0.157 0.829"/>
        <position name="pinky_pp2mp" joint="pinky_pp2mp" ctrlrange="-0.131 0.960" kp="4"/>
    </actuator>

    <!-- the rolling contact joints are modeled by two virtual joints, which have a constraint set here to constrain them to move together -->
    <!--The two distal joints are linked together by a tendon, which is done with the "*_jointlink" fixed tendons
        Some limitations:
        - mujoco only supports a linear combination of joint angles for fixed tendons, so it is an approximation of the actual linkage.
          The relation y = 0.7131 x + 0.06959 was derived from get_coupling_eqn() in finger_kinematics.py (modified for a 1st degree polyfit instead of 2nd)
          where x is PIP angle, y is DIP angle. The y-intercept is ignored.
        - the two joints are not always coupled in reality- for example, the DIP joint can be moved somewhat freely when the PIP joint is fixed (, at least on the older version of the hand).
          This model does not capture such relations. It may be possible to replicate it by setting an appropriate tendon range.
        - in IsaacGym, if there are multiple joints being connected through tendons, they must follow a tree structure and be ordered as such,
          e.g. tendon 1: [pp2mp_virt ->  pp2mp], tendon 2: [pp2mp -> mp2dp_virt], tendon 3: [mp2dp_virt -> mp2dp]-->
    
    <tendon>
        <!--Thumb-->
        <fixed name="thumb_flex">
            <joint joint="thumb_flex_virt" coef="1"/>
            <joint joint="thumb_flex" coef="-1"/>
        </fixed>
        <fixed name="thumb_abd">
            <joint joint="thumb_abd_virt" coef="1"/>
            <joint joint="thumb_abd" coef="-1"/>
        </fixed>
        <fixed name="thumb_m2pp">
            <joint joint="thumb_m2pp_virt" coef="1"/>
            <joint joint="thumb_m2pp" coef="-1"/>
        </fixed>
        <fixed name="thumb_pp2dp">
            <joint joint="thumb_pp2dp_virt" coef="1"/>
            <joint joint="thumb_pp2dp" coef="-1"/>
        </fixed>

        <!-- Index finger -->
        <fixed name="index_abd">
            <joint joint="index_abd_virt" coef="1"/>
            <joint joint="index_abd" coef="-1"/>
        </fixed>
        <fixed name="root2index_pp">
            <joint joint="root2index_pp_virt" coef="1"/>
            <joint joint="root2index_pp" coef="-1"/>
        </fixed>
        <fixed name="index_pp2mp">
            <joint joint="index_pp2mp_virt" coef="1"/>
            <joint joint="index_pp2mp" coef="-1"/>
        </fixed>
        <fixed name="index_jointlink">
            <joint joint="index_pp2mp" coef="0.71"/>
            <joint joint="index_mp2dp_virt" coef="-1"/>
        </fixed>
        <fixed name="index_mp2dp">
            <joint joint="index_mp2dp_virt" coef="1"/>
            <joint joint="index_mp2dp" coef="-1"/>
        </fixed>

        <!-- Middle finger -->
        <fixed name="middle_abd">
            <joint joint="middle_abd_virt" coef="1"/>
            <joint joint="middle_abd" coef="-1"/>
        </fixed>
        <fixed name="root2middle_pp">
            <joint joint="root2middle_pp_virt" coef="1"/>
            <joint joint="root2middle_pp" coef="-1"/>
        </fixed>
        <fixed name="middle_pp2mp">
            <joint joint="middle_pp2mp_virt" coef="1"/>
            <joint joint="middle_pp2mp" coef="-1"/>
        </fixed>
        <fixed name="middle_jointlink">
            <joint joint="middle_pp2mp" coef="0.71"/>
            <joint joint="middle_mp2dp_virt" coef="-1"/>
        </fixed>
        <fixed name="middle_mp2dp">
            <joint joint="middle_mp2dp_virt" coef="1"/>
            <joint joint="middle_mp2dp" coef="-1"/>
        </fixed>

        <!-- Ring finger -->
        <fixed name="ring_abd">
            <joint joint="ring_abd_virt" coef="1"/>
            <joint joint="ring_abd" coef="-1"/>
        </fixed>
        <fixed name="root2ring_pp">
            <joint joint="root2ring_pp_virt" coef="1"/>
            <joint joint="root2ring_pp" coef="-1"/>
        </fixed>
        <fixed name="ring_pp2mp">
            <joint joint="ring_pp2mp_virt" coef="1"/>
            <joint joint="ring_pp2mp" coef="-1"/>
        </fixed>
        <fixed name="ring_jointlink">
            <joint joint="ring_pp2mp" coef="0.71"/>
            <joint joint="ring_mp2dp_virt" coef="-1"/>
        </fixed>
        <fixed name="ring_mp2dp">
            <joint joint="ring_mp2dp_virt" coef="1"/>
            <joint joint="ring_mp2dp" coef="-1"/>
        </fixed>

        <!-- Pinky -->
        <fixed name="pinky_abd">
            <joint joint="pinky_abd_virt" coef="1"/>
            <joint joint="pinky_abd" coef="-1"/>
        </fixed>
        <fixed name="root2pinky_pp">
            <joint joint="root2pinky_pp_virt" coef="1"/>
            <joint joint="root2pinky_pp" coef="-1"/>
        </fixed>
        <fixed name="pinky_pp2mp">
            <joint joint="pinky_pp2mp_virt" coef="1"/>
            <joint joint="pinky_pp2mp" coef="-1"/>
        </fixed>
        <fixed name="pinky_jointlink">
            <joint joint="pinky_pp2mp" coef="0.71"/>
            <joint joint="pinky_mp2dp_virt" coef="-1"/>
        </fixed>
        <fixed name="pinky_mp2dp">
            <joint joint="pinky_mp2dp_virt" coef="1"/>
            <joint joint="pinky_mp2dp" coef="-1"/>
        </fixed>
        
    </tendon>
</mujoco>